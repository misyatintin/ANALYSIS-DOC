{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/upload",
      "dest": "/api/index.py"
    },
    {
      "src": "/documents(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/workspaces(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/analyze(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/compare(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/decision-matrix(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/qa(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/charts(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/analysis(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/comparisons(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|svg))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
